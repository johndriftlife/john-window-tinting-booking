
// This is a fixed schema.prisma with SQLite provider
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  basePrice   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

model Booking {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  phone      String
  date       DateTime
  serviceId  Int
  service    Service   @relation(fields: [serviceId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model AdminSettings {
  id        Int      @id @default(1)
  data      String
  updatedAt DateTime @updatedAt
}

model ServiceShade {
  id        Int     @id @default(autoincrement())
  serviceId Int
  label     String
  enabled   Boolean @default(true)

  @@unique([serviceId, label])
}
